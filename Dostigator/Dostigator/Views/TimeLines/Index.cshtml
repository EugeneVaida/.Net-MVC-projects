@model IEnumerable<Dostigator.Models.TimeLine>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Profile_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<section>
    <h2>ТаймЛайн пользователя</h2>
    <div class="container">

        @foreach (var item in Model)
        {
            <div class="timeline">

                <div class="timeline-event">
                    <div class="card timeline-content">
                        
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4">@Html.DisplayFor(modelItem => item.Name)<i class="material-icons right">more_vert</i></span>
                            <p>@Html.DisplayFor(modelItem => item.PreviewText)</p>
                            <p>@Html.DisplayFor(modelItem => item.Date)</p>
                            <p>@Html.DisplayFor(modelItem => item.Aim.Name)</p>
                        </div>
                        <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
                            <p>@Html.DisplayFor(modelItem => item.Text)</p>
                        </div>
                    </div>
                    <div class="timeline-badge blue white-text"><i class="material-icons">language</i></div>
                </div>

            </div>

                    @Html.DisplayFor(modelItem => item.Aim.Name)
                
                    @Html.DisplayFor(modelItem => item.Name)
                
                    @Html.DisplayFor(modelItem => item.Text)
                
                    @Html.DisplayFor(modelItem => item.PreviewText)
               
                    @Html.DisplayFor(modelItem => item.Date)


                
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                
        }

    </div>
</section>